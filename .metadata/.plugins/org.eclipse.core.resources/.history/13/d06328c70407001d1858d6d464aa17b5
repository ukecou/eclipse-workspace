package jp.co.seraku.serabank;

public class Customer {
	
	int code;
	String name;
	int amount;
	int loan;
	
	public Customer (int code, String name) {
		this.code = code;
		this.name = name;
	}
	
	public void plus(int value) {
		if(amount * 100 < value ) {
			amount += value * 1.12;
		}else {
			System.out.println("AAA");
		}
	}
}